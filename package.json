{
  "name": "mister-hope-portfolio",
  "version": "0.0.0",
  "private": true,
  "author": {
    "name": "Mister-Hope"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Mister-Hope/portfolio.git"
  },
  "type": "module",
  "scripts": {
    "build": "tsc --noEmit && vite build",
    "clean": "rimraf dist",
    "dev": "vite",
    "lint": "oxlint --fix --type-aware --type-check --report-unused-disable-directives --deny-warnings && oxfmt",
    "lint:check": "oxlint --type-aware --type-check --report-unused-disable-directives --deny-warnings && oxfmt --check",
    "preview": "vite preview"
  },
  "dependencies": {
    "@iconify/react": "^6.0.2",
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.2.1",
    "@types/js-yaml": "^4.0.9",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^25.3.3",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.4",
    "jiti": "^2.6.1",
    "js-yaml": "^4.1.1",
    "markdown-it": "^14.1.1",
    "nano-staged": "0.9.0",
    "oxfmt": "0.35.0",
    "oxlint": "1.50.0",
    "oxlint-tsgolint": "0.15.0",
    "rimraf": "^6.1.3",
    "tailwindcss": "^4.2.1",
    "tsx": "^4.21.0",
    "typescript": "~5.9.3",
    "vite": "npm:rolldown-vite@^7.3.1"
  },
  "nano-staged": {
    "**/*": "oxfmt --no-error-on-unmatched-pattern",
    "*.{js,ts}": "oxlint --fix --type-aware --type-check --deny-warnings --report-unused-disable-directives"
  },
  "packageManager": "pnpm@10.30.3"
}
